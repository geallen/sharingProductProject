
@{
    ViewBag.Title = "MesajlariGoruntule";

    if (TempData["gonderilmeBilgisi"] != null)
    {
        <script type="text/javascript">
            alert('@TempData["gonderilmeBilgisi"]');
        </script>
    }
}

<h2>MesajlariGoruntule</h2>
@*<h4>@ViewBag.userADI</h4>
<h4>@ViewBag.userID</h4>*@


<table class="table">
    <tr>
        <th>Gonderen Adi</th>
    </tr>
    @foreach (mesajlar mesaj in ViewBag.mesajListesi)
    {
        if (mesaj.gonderilenId == ViewBag.userID)
        {
            <tr>

                <td>@mesaj.gonderenId</td>
                <td>@mesaj.mesajIcerik</td>
                <td>@Html.ActionLink("Mesaji Gor", "Mesajlasma1", "Home", new { gonderenID = @mesaj.gonderenId }, null)</td>
            </tr>
        }
    }
</table>
